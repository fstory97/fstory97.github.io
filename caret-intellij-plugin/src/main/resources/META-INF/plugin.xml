<!-- Caret IntelliJ Plugin Configuration -->
<idea-plugin>
    <id>com.caret.intellij</id>
    <name>Caret</name>
    <vendor email="support@caret.team" url="https://caret.team">Caret Team</vendor>

    <description><![CDATA[
    Caret - Autonomous AI coding assistant for IntelliJ IDEA.
    
    Features:
    - AI-powered code generation and refactoring
    - File operations (create, edit, delete)
    - Terminal command execution
    - Browser automation
    - Multiple AI provider support
    - Model Context Protocol (MCP) integration
    ]]></description>

    <change-notes><![CDATA[
    <h3>0.1.0</h3>
    <ul>
        <li>Initial release</li>
        <li>Basic HostBridge implementation</li>
        <li>WebView integration</li>
    </ul>
    ]]></change-notes>

    <!-- Product and plugin compatibility -->
    <depends>com.intellij.modules.platform</depends>
    
    <!-- Extensions -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow id="Caret" 
                    secondary="true" 
                    icon="/icons/caret.svg" 
                    anchor="right"
                    factoryClass="com.caret.intellij.ui.CaretToolWindowFactory"/>
        
        <!-- Settings -->
        <applicationConfigurable 
            parentId="tools" 
            instance="com.caret.intellij.settings.CaretSettingsConfigurable"
            id="com.caret.intellij.settings.CaretSettingsConfigurable"
            displayName="Caret"/>
        
        <!-- Project Service -->
        <projectService serviceImplementation="com.caret.intellij.services.CaretProjectService"/>
        
        <!-- Application Service -->
        <applicationService serviceImplementation="com.caret.intellij.services.CaretApplicationService"/>
    </extensions>

    <!-- Actions -->
    <actions>
        <action id="com.caret.intellij.actions.OpenCaretAction"
                class="com.caret.intellij.actions.OpenCaretAction"
                text="Open Caret"
                description="Open Caret AI Assistant">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C"/>
        </action>
    </actions>

    <!-- Startup Activity -->
    <applicationListeners>
        <listener class="com.caret.intellij.listeners.CaretApplicationListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>
</idea-plugin>
